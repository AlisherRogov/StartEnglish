<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/general_background"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/add_word_card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="@dimen/cardMargin"
        android:layout_marginEnd="@dimen/cardMargin"
        card_view:cardCornerRadius="@dimen/cardCornerRadius"
        card_view:cardBackgroundColor="@color/cardBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_text_module"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/module_hint"
                android:paddingTop="10dp"
                android:layout_marginTop="10dp"
                android:lines="1" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/add_module_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_height="80dp"
        android:layout_width="150dp"
        android:text="@string/add_module"
        android:background="@color/cardBackground"/>

</LinearLayout>